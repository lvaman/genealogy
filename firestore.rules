rules_version = '2';

/**
 * Firestore Security Rules for Genealogy Tree
 *
 * Security model:
 * - Tree data (people) is publicly readable (no authentication required)
 * - Only authenticated admin users can write/modify data
 * - User roles are stored in users/{uid} collection
 *
 * To deploy these rules:
 * firebase deploy --only firestore:rules
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function: Check if user is admin
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Trees collection
    match /trees/{treeId} {
      // Tree metadata is publicly readable, admin-only writable
      allow read: if true;
      allow write: if isAdmin();

      // People collection
    match /people/{personId} {
      // Read: Public access
      allow read: if true;

      // Write: Admin only with validation
      allow create, update: if isAdmin() &&
        // Document ID must match person.id
        request.resource.data.id == personId &&

        // Required fields must exist
        request.resource.data.keys().hasAll(['id', 'gender', 'names', 'vital_status']) &&

        // Gender validation
        request.resource.data.gender in ['M', 'F', 'U'] &&

        // Vital status validation
        request.resource.data.vital_status in ['living', 'deceased', 'unknown'] &&

        // Names must be array with at least one entry
        request.resource.data.names is list &&
        request.resource.data.names.size() > 0;

      // Delete: Admin only
      allow delete: if isAdmin();
    }

      // Tree metadata subcollection (for configuration)
      match /meta/{docId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Users collection (for role management)
    match /users/{uid} {
      // Only admins can read and write user roles
      allow read, write: if isAdmin();
    }

    // Audit log collection (for future implementation)
    match /audit_logs/{logId} {
      // Admins can read logs; system writes are handled server-side
      allow read: if isAdmin();
      allow write: if false; // Logs should only be written server-side
    }
  }
}
